//the below code should do the thing required
its in C++

#include<bits/stdc++.h>
using namespace std;
///this is the point where the function begins

void calculate(int x, int y){
	
	int ans=(x*(x+1))/2;
	int ans2=(y*(y+1))/2;
	int ans3=(x<y)?x:y;
	int ans4=ans-ans2;
	if(ans4<-1){
		ans4*=-1;
	}
	
	cout<<ans3+ans4<<endl;	
}

///this is where the function terminates

int main (){
	

	int x, y;
	cin>>x>>y;
	calculate(x, y);
	
	return 0;
}
